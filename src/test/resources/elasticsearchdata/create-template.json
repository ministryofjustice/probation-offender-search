{
  "index_patterns": [
    "person-search-*"
  ],
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0",
      "default_pipeline": "person-search-pipeline"
    },
    "analysis": {
      "analyzer": {
        "streetAnalyzer": {
          "type": "custom",
          "tokenizer": "ngram",
          "filter": [
            "lowercase",
            "asciifolding",
            "street_synonym"
          ]
        },
        "postcodeAnalyzer": {
          "type": "custom",
          "tokenizer": "ngram",
          "filter": [
            "lowercase"
          ],
          "char_filter": [
            "remove_whitespace"
          ]
        }
      },
      "char_filter": {
        "remove_whitespace": {
          "type": "pattern_replace",
          "pattern": "(.+)(\\s+)(.+)",
          "replacement": "$1$3"
        }
      },
      "filter": {
        "street_synonym": {
          "type": "synonym",
          "synonyms": [
            "av => avenue",
            "cl => close",
            "cres => crescent",
            "ct => court",
            "ln => lane",
            "pl => place",
            "rd => road",
            "st => street"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "otherIds.pncNumberShortYear": {
        "type": "keyword"
      },
      "otherIds.croNumberLowercase": {
        "type": "keyword"
      },
      "offenderManagers": {
        "type": "nested",
        "properties": {
          "probationArea.code": {
            "type": "keyword"
          }
        }
      },
      "offenderAliases": {
        "include_in_root": true,
        "type": "nested"
      },
      "dateOfBirth": {
        "format": "yyyy-MM-dd||yyyy/MM/dd||dd-MM-yy||dd/MM/yy||dd-MM-yyyy||dd/MM/yyyy",
        "type": "date"
      },
      "otherIds.pncNumberLongYear": {
        "type": "keyword"
      },
      "contactDetails.addresses": {
        "type": "nested",
        "properties": {
          "streetName": {
            "type": "text",
            "analyzer": "streetAnalyzer"
          },
          "postcode": {
            "type": "text",
            "analyzer": "postcodeAnalyzer"
          }
        }
      }
    }
  }
}